    {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
    {{else}}

    {{/each}}
    
    <h3>editar funcionario: </h3>
    <div class="card">
        <div class="card-body">
            <form action="/admin/funcionario/edit" method="POST">
            <input type="hidden" name="id" value="{{funcionario.id}}">


                <label for="nome">Nome: </label>
                <input type="text" name="nome" id="nome" placeholder="nome do funcionario" class="form-control" value="{{funcionario.nome}}">

                <label for="cpf">Cpf: </label>
                <input type="text" name="cpf" id="cpf" placeholder="cpf do funcionario" class="form-control" value="{{funcionario.cpf}}">

                <label for="cargo">Cargo: </label>
                <input type="text" name="cargo" id="cargo" placeholder="cargo do funcionario" class="form-control" value="{{funcionario.cargo}}">

                <label for="slug">Data de Nascimento: </label>
                <input type="date" name="datanascimento" id="datanascimento" placeholder="cpf do funcionario" class="form-control" value="{{funcionario.datanascimento}}">

                <button type="submit" class="btn btn-success">editar Funcionario</button>
            </form>
        </div>
    </div>
    

