    {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
    {{else}}

    {{/each}}
    
    <h3>Novo Fornecedor: </h3>
    <div class="card">
        <div class="card-body">
            <form action="/admin/fornecedor/novo" method="POST">
            
                <label for="id_fornecedor">ID: </label>
                <input type="text" name="id_fornecedor" id="id_fornecedor" placeholder="id do fornecedor" class="form-control">

                <label for="nome_fornecedor">NOME: </label>
                <input type="text" name="nome_fornecedor" id="nome_fornecedor" placeholder="nome do fornecedor" class="form-control">

                <label for="endereco">ENDEREÇO: </label>
                <input type="text" name="endereco" id="endereco" placeholder="endereço fornecedor" class="form-control">

                <label for="telefone">TELEFONE: </label>
                <input type="text" name="telefone" id="telefone" placeholder="telefone" class="form-control">

                <label for="email">EMAIL: </label>
                <input type="text" name="email" id="email" placeholder="email" class="form-control">

                <button type="submit" class="btn btn-success mt-4">Adicionar Fornecedor</button>
            </form>
        </div>
    </div>
    
