    {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
    {{else}}

    {{/each}}
    
    <h3>editar Produto: </h3>
    <div class="card">
        <div class="card-body">
            <form action="/admin/produto/edit" method="POST">
            <input type="hidden" name="id" value="{{produto.id}}">


                <label for="id_produto">ID: </label>
                <input type="text" name="id_produto" id="id_produto" placeholder="ID do produto" class="form-control" value="{{produto.id_produto}}">

                <label for="descricao">Descrição: </label>
                <input type="text" name="descricao" id="descricao" placeholder="descrição" class="form-control" value="{{produto.descricao}}">

            
                <label for="quantidade">Quantidade: </label>
                <input type="text" name="quantidade" id="quantidade" placeholder="quantidade" class="form-control" value="{{produto.quantidade}}">

                <button type="submit" class="btn btn-success">editar Produto</button>
            </form>
        </div>
    </div>
    

