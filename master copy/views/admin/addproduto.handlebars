    {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
    {{else}}

    {{/each}}
    
    <h3>Novo Produto: </h3>
    <div class="card">
        <div class="card-body">
            <form action="/admin/produto/novo" method="POST">
            
                <label for="id_produto">ID: </label>
                <input type="text" name="id_produto" id="id_produto" placeholder="id" class="form-control">

                <label for="descricao">Descrição: </label>
                <input type="text" name="descricao" id="descricao" placeholder="descrição" class="form-control">

                <label for="preco">Preço: </label>
                <input type="text" name="preco" id="preco" placeholder="preço" class="form-control">

                <label for="quantidade">Quantidade: </label>
                <input type="text" name="quantidade" id="quantidade" placeholder="quantidade" class="form-control">

                <button type="submit" class="btn btn-success mt-4">Adicionar Produto</button>
            </form>
        </div>
    </div>
    

  
    
    
