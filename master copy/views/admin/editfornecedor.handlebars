    {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
    {{else}}

    {{/each}}
    
    <h3>editar Fornecedor: </h3>
    <div class="card">
        <div class="card-body">
            <form action="/admin/fornecedor/edit" method="POST">
            <input type="hidden" name="id" value="{{fornecedor.id}}">


                <label for="id_fornecedor">ID: </label>
                <input type="text" name="id_fornecedor" id="id_fornecedor" placeholder="ID do fornecedor" class="form-control" value="{{fornecedor.id_fornecedor}}">

                <label for="nome_fornecedor">Nome: </label>
                <input type="text" name="nome_fornecedor" id="nome_fornecedor" placeholder="nome do fornecedor" class="form-control" value="{{fornecedor.nome_fornecedor}}">

                <label for="endereco">Endereço: </label>
                <input type="text" name="endereco" id="endereco" placeholder="endereço" class="form-control" value="{{fornecedor.endereco}}">

                <label for="telefone">Telefone: </label>
                <input type="text" name="telefone" id="telefone" placeholder="telefone do fornecedor" class="form-control" value="{{fornecedor.telefone}}">

                <label for="email">Email: </label>
                <input type="text" name="email" id="email" placeholder="email fornecedor" class="form-control" value="{{fornecedor.email}}">

                <button type="submit" class="btn btn-success">editar Fornecedores</button>
            </form>
        </div>
    </div>
    

